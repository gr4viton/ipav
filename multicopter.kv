<StepWidget>:

    tbt_show_info: tbt_show_info
    tbt_informing: tbt_informing
    tbt_draw: tbt_draw
    tbt_show_img: tbt_show_img
    tbt_narrow: tbt_narrow

    kivy_image: kivy_image

    info_label_bottom: info_label_bottom
    info_label_right: info_label_right
    time_label: time_label

#    layout_steps_height: 1500
#    size_hint_y: 0.4
    size_hint_y: None
#    size_hint_x: 1/3
    size_hint_x: None
    width: 282
#    height: self.minimum_height * 4
    height: 250
#    size_hint_y: layout_steps_height / 400

    cols: 1
    padding: (4,4,4,4)
    spacing: (4,4)
    margin: 1
    color: .08,.16 , .24
    canvas.before:
        Color:
            rgb: self.color
        Rectangle:
            pos: self.x + self.margin, self.y + self.margin + 1
            size: self.width - 2 * self.margin , self.height - 2 * self.margin
#            self.thickness
    GridLayout:
        cols: 2
        size_hint_y: 0.15

        ToggleButton:
            id: tbt_narrow
            text: root.name
            size_hint_x: 0.9
            state: 'down'
            on_state: root.set_narrow(self.state == 'down')
        GridLayout:
            cols: 2
            size_hint_x: 0.4
            Label:
                id: time_label
                valign: 'top'
                size_hint_x: 0.4
#                font_size: 10
            GridLayout:
                cols: 2
                size_hint_x: 0.7
                ToggleButton:
                    id: tbt_show_info
                    text: 'info'
#                    state: 'down'
                    on_state: root.show_info(self.state == 'down')

                ToggleButton:
                    id: tbt_informing
                    text: 'sync'
                    state: 'down'
                    on_state: root.sync_info(self.state == 'down')

                ToggleButton:
                    id: tbt_show_img
                    text: 'img'
                    state: 'down'
                    on_state: root.show_img(self.state == 'down')

                ToggleButton:
                    id: tbt_draw
                    text: 'draw'
                    state: 'down'
                    on_state: root.set_drawing(self.state == 'down')

    GridLayout:
        cols:1
        size_hint_y: 0.85

        GridLayout:
            cols: 1
#            size_hint_y: 0.8
            size_hint_y: 0.8
            Image:
                id: kivy_image
                size_hint_y: 1
#                size_hint_x: 1
#                background_normal: 'True'

            TextInput:
                id: info_label_right
                valign: 'top'
                readonly: 'True'
                do_scroll: 'True'


        TextInput:
            id: info_label_bottom
            valign: 'top'
            size_hint_y: 0.2
            font_size: 12
            readonly: 'True'
    #        scroll_y: 'True'
            do_scroll: 'True'

